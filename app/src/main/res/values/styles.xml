<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <!--
        <item name="android:textColor">@color/colorText</item>
         <item name="android:background">@color/background</item>
        -->
        <item name="android:windowBackground">@color/secondaryLightColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionBarStyle">@style/AppClientTheme.ActionBarStyle</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="AppClientTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/AppClientTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="AppClientTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MainMenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/purple</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.CalendarView.Custom" parent="android:Widget.CalendarView">
        <item name="android:focusedMonthDateColor">@color/primaryColor</item>
        <item name="android:weekNumberColor">@color/secondaryColor</item>
        <item name="android:weekDayTextAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:dateTextAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="toolbarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/purple</item>
        <item name="titleTextColor">@color/primaryTextColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionBarStyle">@style/AppClientTheme.ActionBarStyle</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="btnStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_height">@dimen/btnHeight</item>
        <item name="android:layout_width">@dimen/btnWidth</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/btn_active</item>
    </style>

    <style name="btnDanger" parent="btnStyle">
        <item name="android:background">@drawable/btn_danger_background</item>
    </style>

</resources>
