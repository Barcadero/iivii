<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvVetPartnersList"
    android:layout_height="90dp"
    android:layout_width="match_parent"
    android:clickable="true"
    android:padding="5dp"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="false"
    android:background="@color/purple"
    app:cardUseCompatPadding="false">

    <TextView
        android:id="@+id/txtNamePet"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/ivProfileMyPet"
        android:layout_marginStart="16dp"
        android:lines="2"
        android:singleLine="false"
        android:text="Animal Name"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toEndOf="@+id/ivProfileMyPet"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfileMyPet"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"

        android:src="@drawable/no_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
        <!--
            TO put borders on de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_width="2dp"
            app:civ_border_color="@color/primaryDarkColor"
        -->

    <ProgressBar
        android:id="@+id/progressMyAnimal"
        android:layout_width="74dp"
        android:layout_height="71dp"
        android:background="@android:color/transparent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/ivProfileMyPet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtMyPetKind"
        android:layout_width="00dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtNamePet"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:text="Kind of animal"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivProfileMyPet"
        app:layout_constraintTop_toBottomOf="@+id/txtNamePet" />

    <View
        android:id="@+id/viewAnimalList"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="85dp"
        android:background="@color/white"

        android:paddingStart="8dp"
        android:paddingEnd="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtAnimalAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="age"
        app:layout_constraintStart_toEndOf="@+id/ivProfileMyPet"
        app:layout_constraintTop_toBottomOf="@+id/txtMyPetKind" />


</androidx.constraintlayout.widget.ConstraintLayout>