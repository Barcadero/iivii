<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cvVetPartnersList"
    android:layout_height="105dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_width="match_parent"
    android:clickable="true"
    android:padding="5dp"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/purple"
        >

        <TextView
            android:id="@+id/txtNamePet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivProfileMyPet"
            android:layout_marginStart="42dp"
            android:layout_toEndOf="@+id/ivProfileMyPet"
            android:text="Animal Name"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfileMyPet"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/primaryDarkColor"
            android:layout_marginLeft="5dp"
            />
        <ProgressBar
            android:id="@+id/progressMyAnimal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="gone"
            android:background="@android:color/transparent"
            />

        <TextView
            android:id="@+id/txtMyPetKind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtNamePet"
            android:layout_centerVertical="true"
            android:text="Kind of animal" />
    </RelativeLayout>

</android.support.v7.widget.CardView>