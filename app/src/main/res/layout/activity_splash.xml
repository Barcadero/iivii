<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/colorBtnMainMenuBackground"
    android:gravity="center"
    tools:context="client.petmooby.com.br.petmooby.actvity.SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon_cat_face"
            android:layout_weight="1"
            />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon_owl_face"
            android:layout_weight="1"
            />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon_dog_face"
            android:layout_weight="1"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="45sp"
        android:fontFamily="@font/marker_felt_thin"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:layout_marginTop="15dp"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/logo_redondo_60"
        android:layout_marginTop="125dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/copyright"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/iosSecondaryColor"

        android:textStyle="bold"

        />
</LinearLayout>
