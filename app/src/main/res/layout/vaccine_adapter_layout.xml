<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvVetPartnersList"
    android:layout_height="70dp"
    android:layout_width="match_parent"
    android:clickable="true"
    android:padding="5dp"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/purple"
        >

        <TextView
            android:id="@+id/txtVaccineName"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivVaccineImage"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="180dp"
            android:text="Animal Name"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivVaccineImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/vaccine"
            />

        <TextView
            android:id="@+id/txtDateNext"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtVaccineName"
            android:layout_below="@+id/txtVaccineName"
            android:layout_centerVertical="true"
            android:textColor="@color/primaryTextColor"
            android:textStyle="bold"
            android:text="Kind of animal" />

        <ImageView
            android:id="@+id/chevronRight"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="14dp"
            app:srcCompat="@drawable/ic_chevron_right_white" />

        <View
            android:id="@+id/viewVaccineList"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:paddingStart="8dp"
            android:paddingEnd="2dp"
            android:layout_marginStart="55dp"

            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>