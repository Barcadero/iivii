<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cvVetPartnersList"
    android:layout_height="100dp"

    android:layout_width="match_parent"
    android:clickable="true"
    android:padding="5dp"
    android:layout_marginBottom="5dp"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false"
    card_view:cardConerRadius="10dp"
    card_view:cardElevation="6dp"
    android:background="@color/iosSecondaryColor"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/iosSecondaryLightColor"

        >
        <TextView
            android:id="@+id/tvNameVet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Professional Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"
            android:background="@color/iosSecondaryLightColor"
            android:layout_marginLeft="8dp"
            android:gravity="center"
             />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivProfileVet"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            app:riv_corner_radius="15dip"
            app:riv_mutate_background="true"
            app:riv_oval="false"
            android:layout_marginLeft="5dp"
            />
        <ProgressBar
            android:id="@+id/progressVetList"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="gone"
            android:background="@android:color/transparent"
            />

       <!--
        <TextView
            android:id="@+id/tvCliHistoricAreaPro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ãrea do Profissional"
            android:layout_below="@+id/tvNameVet"
            android:layout_alignStart="@+id/tvNameVet"
            android:layout_alignLeft="@+id/tvNameVet" />
        -->
        <LinearLayout
            android:id="@+id/llPriceService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNameVet"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/ivProfileVet"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivPriceMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/primaryDarkColor"
                app:srcCompat="@drawable/ic_email_check_outline" />

            <TextView
                android:id="@+id/tvEmailVet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="some text"
                android:textColor="@color/primaryDarkColor"
                android:textStyle="bold" />
        </LinearLayout>

        <!--

        <ImageView
            android:id="@+id/ivFavoritePro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/llPriceService"
            android:layout_marginEnd="8dp"
            app:srcCompat="@drawable/ic_paw_24"
            android:tint="@android:color/holo_red_light"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp" />
            -->
        <View
            android:id="@+id/viewVeterinaryList"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:paddingStart="8dp"
            android:paddingEnd="2dp"
            android:layout_marginStart="55dp"

            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>